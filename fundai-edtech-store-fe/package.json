{
  "name": "fundai-edtech-store",
  "version": "1.0.0",
  "description": "Funda AI EdTech Store - Desktop Application",
  "homepage": "https://github.com/EmmS21/fundAI",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron:dev": "cross-env NODE_ENV=development npx electron .",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "electron-builder --mac --linux",
    "test": "jest"
  },
  "author": {
    "name": "Emmanuel Sibanda",
    "email": "emmanuel@emmanuelsibanda.com"
  },
  "license": "ISC",
  "build": {
    "appId": "com.funda-ai.edtechstore",
    "productName": "Funda AI EdTech Store",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "icon": "src/assets/logo.icns",
    "directories": {
      "output": "release/"
    },
    "mac": {
      "icon": "src/assets/logo.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education",
      "icon": "src/assets/logo.icns",
      "maintainer": "Emmanuel Sibanda <emmanuel@emmanuelsibanda.com>"
    },
    "publish": {
      "provider": "github",
      "owner": "EmmS21",
      "repo": "fundAI"
    }
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.8",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^24.13.3",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "vite": "^6.0.11",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "@types/react-dropzone": "^4.2.2",
    "electron-log": "^5.3.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "firebase": "^10.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.5",
    "react-toastify": "^11.0.5",
    "zustand": "^5.0.3"
  }
}
